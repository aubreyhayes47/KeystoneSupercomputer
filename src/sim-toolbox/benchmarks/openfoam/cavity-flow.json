{
  "id": "openfoam-cavity-flow",
  "name": "Lid-Driven Cavity Flow",
  "simulator": "openfoam",
  "version": "1.0.0",
  "description": "Classic lid-driven cavity flow benchmark for computational fluid dynamics. Simulates incompressible laminar flow in a 2D square cavity where the top wall moves with constant velocity, creating recirculating vortex patterns. Solved using the icoFoam solver (PISO algorithm for incompressible Navier-Stokes). This is the canonical test case for CFD code verification.",
  "category": "computational-fluid-dynamics",
  "difficulty": "beginner",
  "tags": ["cavity-flow", "incompressible", "laminar", "navier-stokes", "icofoam"],
  "input_files": [
    {
      "filename": "example_cavity.py",
      "description": "Python script to setup and run OpenFOAM cavity flow case",
      "path": "../../openfoam/example_cavity.py",
      "checksum": "f9dbbcaf02a374a14b31ca07c44d429589089253e19056f22207b95e4b9a7e30"
    }
  ],
  "expected_results": {
    "output_files": [
      {
        "filename": "0.5/U",
        "description": "Velocity field at final time step"
      },
      {
        "filename": "0.5/p",
        "description": "Pressure field at final time step"
      },
      {
        "filename": "log.blockMesh",
        "description": "Mesh generation log"
      },
      {
        "filename": "log.icoFoam",
        "description": "Solver execution log"
      }
    ],
    "metrics": {
      "center_vortex_velocity": {
        "value": 0.35,
        "tolerance": 0.05,
        "unit": "m/s"
      },
      "final_time": {
        "value": 0.5,
        "tolerance": 0.001,
        "unit": "s"
      },
      "mesh_cells": {
        "value": 400,
        "tolerance": 0,
        "unit": "count"
      }
    },
    "performance": {
      "typical_runtime_seconds": 15,
      "memory_mb": 256,
      "reference_hardware": "Intel Core i7-1165G7 @ 2.80GHz, 16GB RAM"
    }
  },
  "validation_criteria": {
    "method": "tolerance_based",
    "tolerance": 0.05,
    "checks": [
      {
        "name": "velocity_field_exists",
        "type": "file_exists",
        "parameters": {
          "filename": "/data/output/cavity/0.5/U"
        }
      },
      {
        "name": "pressure_field_exists",
        "type": "file_exists",
        "parameters": {
          "filename": "/data/output/cavity/0.5/p"
        }
      },
      {
        "name": "solver_convergence",
        "type": "convergence",
        "parameters": {
          "log_file": "log.icoFoam",
          "check_pattern": "PISO solution converged"
        }
      }
    ]
  },
  "metadata": {
    "author": "Keystone Supercomputer Team",
    "created_date": "2025-10-20",
    "license": "MIT",
    "references": [
      "OpenFOAM documentation: https://www.openfoam.com",
      "Ghia et al. (1982): High-Re solutions for incompressible flow using the Navier-Stokes equations and a multigrid method",
      "Cavity flow benchmark: https://www.cfd-online.com/Wiki/Lid-driven_cavity_problem"
    ]
  },
  "execution": {
    "command": "python3 example_cavity.py",
    "parameters": {
      "end_time": 0.5,
      "time_step": 0.005
    },
    "timeout_seconds": 180,
    "requires_gpu": false,
    "parallel": {
      "enabled": false,
      "processes": 1,
      "threads": 1
    }
  }
}
